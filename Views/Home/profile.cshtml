@model Social_Networking_EAD.Models.Post
@{
    ViewBag.Title = "profile";
}
<script src="~/Scripts/js/jquery-2.1.3.js"></script>
<script>
    $(document).ready(function() {
        var userMail = '@Session["email"]';
        $.getJSON("/Home/getPost?email=" +userMail  , function (data)
        {
            if(data != null)
            {
                $.each(data,function(i,item)
                {
                    $('#result').prepend("<br><div style='background-color:white; border-radius:10px;margin-right:20px;'><div style='background-color:white;margin-left:-15px;padding:15px;'><p  id='post' style='font-size:16px'><b>atique nazar</b> posted</p><p style='padding:15px;background-color:white;font-size:16px; color:black; text-transform:capitalize;'>"+item.content+" </p><div><button style='background-color:#78bbe6;color:white;padding:10px;width:100px;border-radius:10px;'>Like</button><button style='background-color:#78bbe6;color:white;padding:10px;width:100px;border-radius:10px;'>Comment</button></div></div></div>  ")
                
                });
            }
        });
    });
</script>

<body>
    <div class="main">
        <div class="main_resize">

            <div class="content">
                <div class="content_bg">
                    <div class="mainbar">
                       @using (Html.BeginForm("savePost", "Home", FormMethod.Post))
                       {
                        <br>
                        <div style="background-color:white; border-radius:10px;margin-right:20px">
                            <div style="background-color:white;margin-left:-15px;padding:15px;">
                                <h3>Write something</h3><hr>
                                @* <p id="post" name="post" contenteditable="true" style="padding:15px;background-color:white;font-size:16px;" ></p>
                                *@
                                @Html.TextAreaFor(Model => Model.content, new { style = "width:605px; height : 100px; resize:none;", placeholder = "Write here..." })
                                <br><br>
                                <button type="submit" style="background-color:#78bbe6;color:white;padding:10px;width:100px;border-radius:10px;display:block">Post</button>
                            </div>
                        </div>
                        <br>
                       }
  
                        
                        <div id="result"></div>                 
                        
                        <div class="clr"></div>
                        

                    </div>
                </div>
            </div>

        </div>
    </div>
   
    
</body>


